<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.giuseppe.smarthealth.Registrazione">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/layout_main">

    <TextView android:id="@+id/first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completa la form"
        android:textColor="@color/abc_btn_colored_borderless_text_material"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>
    <TextView android:id="@+id/second_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(i campi contrassegnati con * sono obbligatori)"
        android:textColor="@color/abc_btn_colored_borderless_text_material"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/first_line"/>
    <TextView android:id="@+id/third_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/abc_btn_colored_borderless_text_material"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/second_line"
        android:textSize="20dp"/>


    <EditText android:id="@+id/user_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third_line"
        android:hint="(*) Username" />
    <EditText android:id="@+id/user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_username"
        android:inputType="textPassword"
        android:hint="(*) Password" />
    <EditText android:id="@+id/user_repeat_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_password"
        android:inputType="textPassword"
        android:hint="(*) Ripeti password" />



    <EditText android:id="@+id/user_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="(*) Nome"
        android:layout_below="@+id/user_repeat_password" />

    <EditText android:id="@+id/user_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="(*) Cognome"
        android:layout_below="@+id/user_first_name" />
    <TextView android:id="@+id/space_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_below="@+id/user_last_name" />
    <TextView android:id="@+id/sex_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="43dp"
        android:paddingBottom="50dp"
        android:text=" (*) Sesso"
        android:textSize="16dp"
        android:layout_below="@+id/space_one" />
    <Spinner android:id="@+id/user_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sex"
        android:drawSelectorOnTop="true"
        android:entries="@array/sex_list"
        android:layout_toRightOf="@+id/sex_label"
        android:layout_below="@+id/space_one" />
    <TextView android:id="@+id/empty_label_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:text=""
        android:textSize="16dp"
        android:layout_below="@+id/user_sex" />
    <TextView android:id="@+id/malattia_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="43dp"
        android:paddingBottom="50dp"
        android:text=" (*) Patologia/e"
        android:textSize="16dp"
        android:layout_below="@+id/empty_label_c" />
    <CheckBox android:id="@+id/user_malattia_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialisi Peritoneale"
        android:layout_toRightOf="@+id/malattia_label"
        android:layout_below="@+id/empty_label_c"
        android:checked="false" />
    <CheckBox android:id="@+id/user_malattia_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emodialisi"
        android:layout_toRightOf="@+id/malattia_label"
        android:layout_below="@+id/user_malattia_a"
        android:checked="false" />
    <CheckBox android:id="@+id/user_malattia_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insufficienza Renale"
        android:layout_toRightOf="@+id/malattia_label"
        android:layout_below="@+id/user_malattia_b"
        android:checked="false" />
    <CheckBox android:id="@+id/user_malattia_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trapianto"
        android:layout_toRightOf="@+id/malattia_label"
        android:layout_below="@+id/user_malattia_c"
        android:checked="false" />
    <CheckBox android:id="@+id/user_malattia_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diabete Tipo I"
        android:layout_toRightOf="@+id/malattia_label"
        android:layout_below="@+id/user_malattia_d"
        android:checked="false" />
    <CheckBox android:id="@+id/user_malattia_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diabete Tipo II"
        android:layout_toRightOf="@+id/malattia_label"
        android:layout_below="@+id/user_malattia_e"
        android:checked="false" />
    <CheckBox android:id="@+id/user_malattia_g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esami del Sangue"
        android:layout_toRightOf="@+id/malattia_label"
        android:layout_below="@+id/user_malattia_f"
        android:checked="false" />
    <CheckBox android:id="@+id/user_malattia_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test delle Urine"
        android:layout_toRightOf="@+id/malattia_label"
        android:layout_below="@+id/user_malattia_g"
        android:checked="false" />
    <TextView android:id="@+id/empty_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:text=""
        android:textSize="22dp"
        android:layout_below="@+id/user_malattia_h" />
    <TextView android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:text=" (*) Nascita"
        android:textSize="16dp"
        android:layout_below="@+id/empty_label" />
    <com.example.giuseppe.smarthealth.CustomDatePicker android:id="@+id/user_birthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/date_label"
        android:layout_below="@+id/empty_label" />
    <TextView android:id="@+id/empty_label_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:text=""
        android:textSize="16dp"
        android:layout_below="@+id/user_birthdate" />
    <EditText android:id="@+id/user_tax_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="(*) Codice Fiscale"
        android:layout_below="@+id/empty_label_b" />
    <EditText android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Indirizzo e-mail"
        android:layout_below="@+id/user_tax_code" />
    <EditText android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="(*) Telefono"
        android:layout_below="@+id/user_email" />
    <EditText android:id="@+id/user_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CittÃ "
        android:layout_below="@+id/user_phone" />
    <EditText android:id="@+id/user_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Indirizzo"
        android:layout_below="@+id/user_city" />
    <EditText android:id="@+id/user_zip_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CAP"
        android:layout_below="@+id/user_address" />
    <TextView android:id="@+id/space_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_below="@+id/user_zip_code" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="CONTINUA"
        android:onClick="riepilogo"
        android:layout_below="@+id/space_two"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>